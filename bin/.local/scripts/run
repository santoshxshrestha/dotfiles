#!/usr/bin/env bash

file=$(find . -type f -printf "%T@ %p\n" | sort -n | tail -1 | cut -d' ' -f2-)
extension="${file##*.}"

case "$extension" in
c)
    echo "Compiling C file: $file"
    gcc "$file" && ./a.out
    ;;
cpp)
    echo "Compiling C++ file: $file"
    g++ "$file" && ./a.out
    ;;
*)
    echo "LOL got the wrong file in the buffer: .$extension"
    ;;
esac
